<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bizflow.auth.saml.dao.ServiceProviderDAO">
    <select id="selectServiceProviderWithId" parameterType="String" resultType="com.bizflow.auth.saml.model.ServiceProviderVO">
        SELECT entityId
              ,metaUrl
              ,acsUrl
              ,sloUrl
              ,validUntil
              ,status
              ,countdownLatch
              ,updUserId
              ,updDateTime
              ,spDesc
              ,orgName
              ,orgUnitName
              ,localName
              ,country
              ,email
          FROM SPInfo
          WHERE acsUrl = #{acsUrl}
    </select>
</mapper>